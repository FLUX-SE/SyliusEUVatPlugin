<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="FluxSE\SyliusEUVatPlugin\Entity\VATNumberAwareInterface">

        <constraint name="FluxSE\SyliusEUVatPlugin\Constraints\CountryVatNumber">
            <option name="groups">sylius</option>
        </constraint>

        <getter property="vatNumber">
            <constraint name="Prometee\VIESClientBundle\Constraints\VatNumber">
                <option name="groups">sylius</option>
            </constraint>
        </getter>
    </class>

</constraint-mapping>
